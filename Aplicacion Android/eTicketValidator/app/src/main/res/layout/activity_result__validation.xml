<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result__validation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mlopezitsolutions.eticketvalidator.Result_Validation">


    <TextView
        android:text="Resultado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/txtv_Result"
        android:layout_below="@+id/img_Logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/txtv_Disclaimer" />

    <ImageView
        android:layout_width="222dp"
        android:layout_height="148dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/img_Logo"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Proyecto programacion III cuatrimestre 2016."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_Copyright"
        android:gravity="center"
        tools:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Desarrollo por: Marny Lopez."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_Disclaimer"
        android:gravity="center"
        tools:textSize="24sp"
        android:layout_above="@+id/txtv_Copyright"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
